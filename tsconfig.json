{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "dom",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "src",
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "setupTests.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}